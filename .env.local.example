# .env.local - Development Environment Variables

# IMPORTANT: Do not commit this file to Git!
# See .env.example for template

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# Your PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL="postgresql://postgres:password@localhost:5432/vocabcards"

# ==========================================
# OPENAI API CONFIGURATION
# ==========================================
# Optional: System-wide API key (all users share this)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-your-api-key-here"

# ==========================================
# NEXTAUTH CONFIGURATION
# ==========================================
# Unique secret for encrypting session tokens
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"

# URL where the app is hosted
# Development: http://localhost:3000
# Production: https://yourdomain.com
NEXTAUTH_URL="http://localhost:3000"

# ==========================================
# ENCRYPTION CONFIGURATION
# ==========================================
# Key for encrypting user API keys in database
# Generate with: openssl rand -hex 16
ENCRYPTION_KEY="your-encryption-key-here-change-in-production"

# ==========================================
# OPTIONAL: REDIS CONFIGURATION
# ==========================================
# For caching and rate limiting (future feature)
# REDIS_URL="redis://localhost:6379"

# ==========================================
# OPTIONAL: MONITORING
# ==========================================
# Sentry error tracking
# SENTRY_DSN="https://example@example.ingest.sentry.io/123456"

# Environment
NODE_ENV="development"
