generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id              String         @id @default(cuid())
  email           String         @unique
  password        String
  name            String?
  encryptedApiKey String?
  age             Int?
  bio             String?
  avatar          String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  coins           BigInt         @default(0)
  totalExp        BigInt         @default(0)
  decks           Deck[]
  transactions    Transaction[]
  userMissions    UserMission[]
  userPets        UserPet[]
  userProgress    UserProgress[]

  @@index([email])
}

model Deck {
  id          String   @id @default(cuid())
  ownerId     String
  topic       String
  title       String
  description String?
  difficulty  String   @default("standard")
  language    String   @default("english")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  cards       Card[]
  owner       User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@index([ownerId])
  @@index([topic])
}

model Card {
  id              String         @id @default(cuid())
  deckId          String
  word            String
  partOfSpeech    String
  definition      String
  exampleSentence String
  phonetic        String?
  translation     String?
  createdAt       DateTime       @default(now())
  imageUrl        String?
  deck            Deck           @relation(fields: [deckId], references: [id], onDelete: Cascade)
  userProgress    UserProgress[]

  @@index([deckId])
  @@index([word])
}

model UserProgress {
  id             String    @id @default(cuid())
  userId         String
  cardId         String
  easinessFactor Float     @default(2.5)
  interval       Int       @default(1)
  repetitions    Int       @default(0)
  nextReviewDate DateTime  @default(now())
  isKnown        Boolean   @default(false)
  reviewCount    Int       @default(0)
  lastReviewDate DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  card           Card      @relation(fields: [cardId], references: [id], onDelete: Cascade)
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, cardId])
  @@index([userId])
  @@index([nextReviewDate])
}

model APIKeyUsage {
  id            String   @id @default(cuid())
  deckId        String
  userId        String
  tokensUsed    Int
  costEstimated Float
  generatedAt   DateTime @default(now())

  @@index([userId])
  @@index([generatedAt])
}

model Pet {
  id        String     @id @default(cuid())
  baseName  String
  archetype String
  baseImage String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  shopItems ShopItem[]
  userPets  UserPet[]
}

model UserPet {
  id           String   @id @default(cuid())
  userId       String
  petId        String
  customName   String?
  level        Int      @default(1)
  exp          Int      @default(0)
  mood         Int      @default(100)
  hunger       Int      @default(100)
  affection    Int      @default(0)
  isActive     Boolean  @default(false)
  activeOutfit Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  pet          Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([petId])
}

model Mission {
  id           String        @id @default(cuid())
  title        String
  description  String?
  type         String
  category     String
  targetValue  Int
  rewardCoins  Int
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  userMissions UserMission[]
}

model UserMission {
  id           String   @id @default(cuid())
  userId       String
  missionId    String
  currentValue Int      @default(0)
  isClaimed    Boolean  @default(false)
  lastUpdated  DateTime @default(now())
  resetAt      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  mission      Mission  @relation(fields: [missionId], references: [id], onDelete: Cascade)
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, missionId, resetAt])
  @@index([userId])
}

model ShopItem {
  id           String        @id @default(cuid())
  name         String
  type         String
  rarity       String
  price        Int
  metadata     Json?
  petId        String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  pet          Pet?          @relation(fields: [petId], references: [id])
  transactions Transaction[]
}

model Transaction {
  id        String   @id @default(cuid())
  userId    String
  itemId    String
  amount    Int
  type      String
  createdAt DateTime @default(now())
  item      ShopItem @relation(fields: [itemId], references: [id])
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
